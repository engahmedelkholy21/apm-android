<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layoutDirection="rtl">

        <EditText
            android:id="@+id/loanCodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="بحث بكود أو اسم العميل"
            android:inputType="text" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="بحث" />

        <TextView android:id="@+id/loanCodeTextView" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="كود القرض" />
        <TextView android:id="@+id/customerName" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="اسم العميل" />
        <TextView android:id="@+id/customerCode" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="كود العميل" />
        <TextView android:id="@+id/kestNumber" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="رقم القسط" />
        <TextView android:id="@+id/est7kakDate" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="تاريخ الاستحقاق" />
        <TextView android:id="@+id/kestAmount" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="قيمة القسط" />
        <TextView android:id="@+id/mandoobName" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="اسم المندوب" />
        <TextView android:id="@+id/mandoobCode" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="كود المندوب" />
        <TextView android:id="@+id/loanPeriod" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="مدة التمويل" />
        <TextView android:id="@+id/fatoraNum" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="رقم الفاتورة" />
        <TextView android:id="@+id/damen1Name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="اسم الضامن الأول" />
        <TextView android:id="@+id/damen1Code" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="كود الضامن الأول" />
        <TextView android:id="@+id/damen2Name" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="اسم الضامن الثاني" />
        <TextView android:id="@+id/damen2Code" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="كود الضامن الثاني" />

        <EditText
            android:id="@+id/payAmountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="المبلغ المسدد"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/payButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سداد"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>
